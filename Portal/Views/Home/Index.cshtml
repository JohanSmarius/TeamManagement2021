@{
    ViewData["Title"] = "Home Page";
}

@model List<GamesViewModel>

 <table class="table table-striped">
        <thead>
        <th>Playtime</th>
        <th>DepartureTime</th>
        <th>Homegame</th>
        <th>Coach</th>
        <th>Washduty</th>
        <th>Drivers</th>
        <th>Opponent</th>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@($"{game.PlayTime:dd-MM-yyyy HH:mm}")</td>
                    <td>@($"{game.DepartureTime:HH:mm}")</td>
                    <td><input asp-for="@game.IsHomeGame" disabled="disabled" /></td>
                    <td>@(game.Coach?.Name ?? "Coach missing")</td>
                    <td>@(game.LaundryDuty?.Name ?? "LaundryDuty missing")</td>
                    <td>@game.Drivers</td>
                    <td>@game.Opponent?.Name</td>
                </tr>
            }
        </tbody>

    </table>

